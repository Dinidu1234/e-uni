<Window x:Class="KickBlastRealtimeUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="KickBlast" Height="720" Width="1200" MinWidth="1000" MinHeight="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F4F6FB" Padding="16">
            <StackPanel>
                <TextBlock Text="KickBlast" FontSize="24" FontWeight="Bold" Margin="0,4,0,20"/>
                <Button Content="Dashboard" Command="{Binding ShowDashboardCommand}" Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Athletes" Command="{Binding ShowAthletesCommand}" Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Calculator" Command="{Binding ShowCalculatorCommand}" Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="History" Command="{Binding ShowHistoryCommand}" Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Settings" Command="{Binding ShowSettingsCommand}" Style="{StaticResource SidebarButtonStyle}" />
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Background="#FBFCFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="64" />
                <RowDefinition Height="*" />
                <RowDefinition Height="32" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E5EAF2" BorderThickness="0,0,0,1" Padding="20,12">
                <DockPanel>
                    <TextBlock Text="KickBlast Realtime UI" FontWeight="SemiBold" FontSize="18" DockPanel.Dock="Left" />
                    <TextBlock Text="{Binding CurrentDateText}" HorizontalAlignment="Right" DockPanel.Dock="Right" />
                </DockPanel>
            </Border>

            <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" Margin="16" />
            <Border Grid.Row="2" Background="White" BorderBrush="#E5EAF2" BorderThickness="1,1,1,0" Padding="10,4">
                <TextBlock Text="{Binding StatusMessage}" Foreground="#334" />
            </Border>
        </Grid>
    </Grid>
</Window>
