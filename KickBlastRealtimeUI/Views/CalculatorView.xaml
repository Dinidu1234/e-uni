<UserControl x:Class="KickBlastRealtimeUI.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" Margin="6" ItemsSource="{Binding Athletes}" DisplayMemberPath="FullName" SelectedItem="{Binding SelectedAthlete}"/>
                <TextBox Grid.Column="1" Margin="6" Text="{Binding CoachingHours, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Grid.Column="2" Margin="6" Text="{Binding Competitions, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Column="3" Margin="6" Content="Calculate" Command="{Binding CalculateCommand}"/>
                <Button Grid.Column="4" Margin="6" Content="Save" Command="{Binding SaveCommand}"/>
            </Grid>
        </Border>
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="{Binding Summary}" TextWrapping="Wrap" />
                <TextBlock Text="{Binding WeightStatus}" Margin="0,8,0,0"/>
                <TextBlock Text="Second Saturday: " FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding SecondSaturday}"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
