<UserControl x:Class="KickBlastRealtimeUI.Views.AthletesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding Plans}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedPlanFilter}" Margin="4"/>
                <TextBox Grid.Column="2" Text="{Binding AthleteName, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
                <TextBox Grid.Column="3" Text="{Binding AthleteWeight, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
                <TextBox Grid.Column="4" Text="{Binding TargetWeight, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
                <ComboBox Grid.ColumnSpan="2" Grid.Column="3" VerticalAlignment="Bottom" Margin="4,36,4,0" ItemsSource="{Binding Plans}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedPlan}"/>
                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Bottom" Margin="4,36,4,0">
                    <Button Content="Add / Update" Command="{Binding AddOrUpdateCommand}" Margin="0,0,8,0"/>
                    <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="0,0,8,0"/>
                    <Button Content="Clear" Command="{Binding ClearCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <DataGrid ItemsSource="{Binding AthletesView}" SelectedItem="{Binding SelectedAthlete}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Weight" Binding="{Binding WeightKg}" Width="120"/>
                    <DataGridTextColumn Header="Target" Binding="{Binding TargetWeightKg}" Width="120"/>
                    <DataGridTextColumn Header="Plan" Binding="{Binding TrainingPlan.Name}" Width="160"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
