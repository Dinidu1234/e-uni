<UserControl x:Class="KickBlastRealtimeUI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource CardStyle}" MaxWidth="700">
        <StackPanel>
            <TextBlock Text="Pricing Settings" FontWeight="Bold" FontSize="20" Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <Grid.RowDefinitions><RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/></Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Beginner Weekly Fee" Margin="4"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding BeginnerWeeklyFee, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Intermediate Weekly Fee" Margin="4"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding IntermediateWeeklyFee, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Elite Weekly Fee" Margin="4"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding EliteWeeklyFee, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Competition Fee" Margin="4"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CompetitionFee, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Coaching Hourly Rate" Margin="4"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CoachingHourlyRate, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
            </Grid>
            <Button Content="Save Pricing" Width="140" Margin="4,12,4,4" HorizontalAlignment="Right" Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
